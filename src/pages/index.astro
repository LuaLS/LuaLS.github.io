          z-index: -1;
          top: 0%;
          left: 0%;
          width: 100%;
          height: 100%;
          border-radius: 99em;
          background-color: var(--brand-primary);
          transition: opacity ease-in-out 0.5s;
          opacity: 0;
          filter: blur(10px);
        }

        &.active::before {
          opacity: 0.7;
        }

        &::after {
          content: "";
          position: absolute;
          z-index: -2;
          top: 10%;
          left: 10%;
          width: 80%;
          height: 80%;
          border-radius: 20%;
          background-color: var(--brand-primary);
          transition: opacity ease-in-out 0.5s;
          opacity: 0;
        }

        &.active::after {
          filter: brightness(150%) hue-rotate(30deg) blur(15px);
          animation: spin 3s infinite both linear;
          opacity: 1;
        }

        @keyframes spin {
          0% {
            transform: rotate(0deg);
          }
          100% {
            transform: rotate(360deg);
          }
        }

        &.vscode {
          --brand-primary: #23a9f2;
        }
        &.neovim {
          --brand-primary: #78e027;
        }
        &.jetbrains {
          --brand-primary: #fb0240;
        }
        &.other {
          --brand-primary: #ffdc15;
        }

        &:hover {
          cursor: pointer;
        }

        img,
        :global(i) {
          height: 1em;
          width: 1em;
        }
      }
    }

    .tab-content {
      position: relative;
      width: fit-content;
      max-width: 100%;
      margin: 0px auto auto auto;
      overflow: auto auto;

      & > div {
        position: absolute;
        left: -999vw;
        top: -999vh;
        opacity: 0;

        h3 {
          margin-bottom: auto;
        }

        & > p {
          text-align: center;
        }

        &.active {
          transition: opacity ease-in 0.5s;
          opacity: 1;
          position: static;
          padding-bottom: 2em;
        }

        .instructions {
