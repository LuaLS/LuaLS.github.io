    }
  }

  section#install {
    h2 {
      margin: 0px;
      margin-bottom: 0.5em;
    }

    .install-tabs {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      justify-items: center;
      position: relative;
      width: 100%;
      margin-bottom: 1em;
      z-index: 1;

      button {
        background-color: white;
        border: none;
        border-radius: 99em;
        padding: 0.3em;
