---
import ExternalLink from "../common/ExternalLink.astro";
import Icon from "../common/Icon.astro";
import Tooltip from "../common/Tooltip.astro";

export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header class={className}>
  <nav>
    <a href="/" class="home">
      <Tooltip content="Home">
        <Icon name="house" group="solid" />
      </Tooltip>
    </a>
    <div>
      <a href="/wiki/">
        <Tooltip content="Wiki">
          <Icon name="book" group="solid" />
        </Tooltip>
      </a>
    </div>
    <Tooltip
      content="<div align='center'>Search <br/><kbd>/</kbd></div>"
      allowHTML
    >
      <button class="site-search-icon" aria-keyshortcuts="/">
        <Icon name="search" group="solid" />
      </button>
    </Tooltip>
    <span class="github">
      <ExternalLink
        url="https://github.com/luals/lua-language-server"
        icon={false}
      >
        <Icon name="github" group="brands" />
      </ExternalLink>
    </span>
  </nav>
</header>

<style lang="scss">
  :global(html) {
    scroll-padding-top: 3.5em;
  }

  header {
    position: fixed;
    top: 0px;
    font-size: 1.3em;
    background-color: #0f2e4b;
    width: 100%;
    height: 3.5rem;
    padding: 0.5rem;
    z-index: 20;
    box-sizing: border-box;

    :global(+ *) {
      margin-top: 3.5em;
    }

    nav {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(4, 2em);
      justify-content: space-between;
      align-items: center;
      justify-items: center;

      & > div {
        width: 100%;
        display: inline-flex;
        justify-content: center;
        margin: auto;
      }

      a,
      :global(a.external) {
        color: white;
      }

      button {
        border: none;
        background: none;
        color: white;
        font-size: 1em;
      }

      .github {
        width: fit-content;
        font-size: 1.2em;
      }
    }
  }
</style>
