---
const { id, level } = Astro.props;

const Element = `h${level}`;

export interface Props {
  id: string;
  level: 1 | 2 | 3 | 4 | 5 | 6;
}

import Icon from "../common/Icon.astro";
---

<div class="heading" id={id}>
  <a href={`#${id}`}
    ><Icon name="link" group="solid" class="icon" /><Element><slot /></Element
    ></a
  >
</div>

<style lang="scss">
  :global(details.accordion > summary div.heading) {
    margin: 0px;

    & > a > :global(i.icon) {
      display: none;
    }
  }

  div.heading {
    width: calc(100%);
    margin: 1em 0px 0.5em 0em;
    line-height: 3ch;

    & > a {
      color: white;
      display: flex;
      align-items: center;
      position: relative;

      & > :global(i.icon) {
        position: absolute;
        left: -1.75em;
        font-size: 1.25em;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
      }
    }

    :global(h1),
    :global(h2),
    :global(h3),
    :global(h4),
    :global(h5),
    :global(h6) {
      width: 100%;
      margin: 0px;
      text-align: left;
      position: relative;
      word-break: break-word;

      &::after {
        content: "";
        display: block;
        width: calc(100% + 0.2em);
        height: 106%;
        background-color: #ff9500;
        opacity: 0.2;
        position: absolute;
        bottom: -6%;
        border-radius: 0.1em;
        left: -0.1em;
        z-index: -1;
        padding: 0px;
        clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);
        transition: clip-path cubic-bezier(0.65, 0.05, 0.36, 1) 1s;
      }
    }

    &:target {
      :global(h1),
      :global(h2),
      :global(h3),
      :global(h4),
      :global(h5),
      :global(h6) {
        &::after {
          clip-path: polygon(0 0, 100% 0%, 100% 100%, 0% 100%);
        }
      }
      a > :global(i.icon) {
        opacity: 1;
      }
    }

    &:global(+ p) {
      margin-top: 0.25em;
    }
  }

  @media screen and (max-width: 800px) {
    div.heading {
      width: 100%;
      font-size: 0.8em;
      margin: 2em 0px 0px 0px;

      & > a > :global(i.icon) {
        display: none;
      }
    }
  }
</style>
